@model Fletnix.Web.Models.DashboardViewModel
@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard</h2>
<h3>Movies</h3>
<div class="row">
    @foreach (var movie in Model.Movies)
    {
        <div class="col-md-2">
            <a class="btn btn-block btn-media" href="@Url.Action("Movie", "Details", new { id = movie.Id })">
                <h4>@movie.Title</h4>
                @if (!string.IsNullOrEmpty(movie.ImageUri))
                {
                    <img src="@movie.ImageUri" alt="@movie.Title" class="img-responsive img-thumbnail" />
                }
            </a>
        </div>
    }
</div>

<h3>TV Shows</h3>
<div class="row">
    @foreach (var tvShow in Model.TvShows)
    {
        <div class="col-md-2">
            <a class="btn btn-block btn-media" href="@Url.Action("TvShow", "Details", new { id = tvShow.Id })">
                <h4>@tvShow.Title</h4>
                @if (!string.IsNullOrEmpty(tvShow.ImageUri))
                {
                    <img src="@tvShow.ImageUri" alt="@tvShow.Title" class="img-responsive img-thumbnail" />
                }
            </a>
        </div>
    }
</div>